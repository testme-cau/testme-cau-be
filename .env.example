# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development

# SECRET_KEY: Used for session encryption and CSRF protection
# Generate a new one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000
# SERVER_URL: Full base URL for accessing uploaded files
# Development: http://localhost:5000
# Production: https://yourdomain.com
SERVER_URL=http://localhost:5000

# File Upload (local storage)
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=16777216

# OpenAI API
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Admin Page Authentication (for web testing)
# These credentials are used to access /admin-page
ADMIN_ID=admin
ADMIN_PW=change-this-password
